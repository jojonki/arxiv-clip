{
  "manifest_version": 3,
  "name": "arXiv clip",
  "short_name": "arXiv clip",
  "description": "",
  "version": "2.1",
  "action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    },
    "default_title": "arXiv clip",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "24": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["scripting", "declarativeContent"],
  "host_permissions": ["https://arxiv.org/*"],
  "background": {
    "service_worker": "background.js"
  }
}
