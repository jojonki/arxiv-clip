{
    "manifest_version": 2,
    "name": "arXiv clip",
    "short_name": "arXiv clip",
    "description": "",
    "version": "1.3.1",
    "background": {
        "scripts": ["jquery-3.4.1.min.js", "background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png"
        },
        "default_title": "arXiv clip",
        "default_popup": "popup.html"
    },
    "icons": {
        "16"  : "icon.png",
        "24"  : "icon.png",
        "32"  : "icon.png",
        "48"  : "icon.png",
        "128" : "icon.png"
    },
    "permissions": [
        "tabs",
        "https://arxiv.org/*"
    ]
}
